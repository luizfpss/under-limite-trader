{
  "manifest_version": 3,
  "name": "Under limite",
  "version": "1.7.1",
  "description": "Assistente visual para an√°lise de mercados Under Limite.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.bet365.com/*",
    "*://*.bet365.bet.br/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bet365.com/*",
        "*://*.bet365.bet.br/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Abrir Under limite",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "odds-reference.json",
        "under-limite-ritmo.json",
        "under-limite-tick.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}